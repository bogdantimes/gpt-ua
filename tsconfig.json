{
    "compilerOptions": {
        // web
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "react",
        "esModuleInterop": true,
        // gas
        "target": "ES2019",
        "module": "None",
        "moduleResolution": "node",
        "noImplicitUseStrict": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}
